@model Food.Models.DTO.AddToFavoriteDto

@{
    ViewData["Title"] = "Add To Favorites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<div class="col-md-5 m-auto">
    <h3>Додади го рецептот во омилени:</h3>
</div>

<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddRecipeToFavorite" method="post">
            <input type="hidden" asp-for="RecipeId" />
            <div class="form-group">
                <label asp-for="SelectedRecipe.Name">Име на рецептот:</label>
                <input disabled asp-for="SelectedRecipe.Name" class="form-control" />
            </div>

        
            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("input").click(function () {
            alert(
                "Успешнo додаден рецепт во омилени!"
            );
        });
    });
</script>